<div class="container">
  <h1>Schedule an appointment</h1>
  <div class="appointment-group">
    <%= form_for @appointment, html: { multipart: true }, :validate=>true do |f| %>
      <div class="form-group col-sm-6">
        <%= f.text_field :firstName, class: 'form-control', placeholder: "First Name", required: true  %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.text_field :lastName, class: 'form-control', placeholder: "Last Name", required: true  %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.text_field :email, class: 'form-control', placeholder: "Email", required: true %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.text_field :phone, class: 'form-control', autofocus: true, placeholder: 'xxx-xxx-xxxx', value: number_to_phone(@appointment.phone, area_code: true, extension: 555), required: true %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.label :gender %>
        <%= f.select(:gender, options_for_select([['Male', 1], ['Female', 2]]))%>
      </div>

      <div class="form-group col-sm-6">
        <%= f.label "Appointment Date Requested" %>
        <%= f.date_field :date%>
      </div>
    </div>

    <div class="appointment-message">
      <div class="form-group">
        <%= f.text_field :subject, class: 'form-control', placeholder: "Subject", required: true %>
      </div>

      <div class="form-group">
        <%= f.text_area :message, rows: 8, class: 'form-control', placeholder: "Message", required: true %>
      </div>
    </div>

    <div class="form-group hidden">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: 'form-control', hint: "Leave this field blank" %>
    </div>

    <div class="form-group">
      <%= f.submit "Schedule Appointment", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
